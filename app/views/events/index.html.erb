<h1>Listing events</h1>

<table class="table table-condensed table-hover table-striped">
  <tr>
    <th>User</th>
    <th>Entered at</th>
    <th>Event type</th>
    <th>Body part</th>
    <th>Level</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Temperature</th>
    <th>Drugs</th>
    <th>Activity type</th>
    <th>Activity since</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.user_id %></td>
    <td><%= event.entered_at %></td>
    <td><%= EVENT_TYPE[event.event_type] %></td>
    <td><%= BODY_PART[event.body_part.to_i] %></td>
    <td><%= event.level %></td>
    <td><%= DESCRIPTION[event.description.to_i] %></td>
    <td><%= QUANTITY[event.quantity.to_i] %></td>
    <td><%= TEMPERATURE[event.temperature.to_i] %></td>
    <td><%= event.drugs %></td>
    <td><%= ACTIVITY_TYPE[event.activity_type.to_i] %></td>
    <td><%= event.activity_since %></td>
    <td class="list_actions"><%= link_to 'Show', event %></td>
    <td class="list_actions"><%= link_to 'Edit', edit_event_path(event) %></td>
    <td class="list_actions"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

